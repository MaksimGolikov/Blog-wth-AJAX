@using Blog.Models;
@model Tuple<IEnumerable<User>,ForMasterPage>
@{
    Layout = "~/Views/MainPage.cshtml";
    Culture = UICulture = Model.Item2.Language;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<nav>
    <div class="container">
        <div id="menu">
            @Html.Partial("TopMenu", Model.Item2);
        </div>
        <a id="menu-toggle" href="#" class=" ">&#9776;</a>
    </div>
</nav>
<header>
    <div class="container">
        <h2 class="docs-header"> @Resources.Home.BlogName </h2>
    </div>
</header>
<section>
    @Html.Partial("Admin");


    <div class="docs-content">
        @foreach(var item in Model.Item1)
        {
            <h4>@item.FirstName  @item.SecondName</h4>
            <p>@Resources.Admin.CurrentRole:   @item.Role</p>
            <table>
                <tr>
                    <td>
                        <form action="~/Admin/ChangeUserRole">
                            <input type="hidden" value="@item.Id" name="Id"/>
                            <input type="hidden" value="admin" name="Role" />
                            <input type="submit" value="@Resources.Admin.SetAdminRole">
                        </form>                                        
                    </td>
                    <td>                       
                        <form action="~/Admin/ChangeUserRole">
                            <input type="hidden" value="@item.Id" name="Id" />
                            <input type="hidden" value="user" name="Role" />
                            <input type="submit" value="@Resources.Admin.SetUserRole">
                        </form>              
                    </td>
                    <td>                        
                        <form action="~/Admin/ChangeUserRole">
                            <input type="hidden" value="@item.Id" name="Id" />
                            <input type="hidden" value="gold" name="Role" />
                            <input type="submit" value="@Resources.Admin.SetGoldRole">
                        </form>              
                    </td>
                </tr>
            </table>
        }
    </div>


</section>